@model IEnumerable<SMPlanner.Models.Speaker>

@{
    ViewData["Title"] = "Index";
}

<h1>Speakers</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            Find by Speaker and Topic: <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" />
            <input type="submit" value="Search" class="btn btn-default" /> |
            <a asp-action="Index">Back to Full List</a>
        </p>
    </div>
</form>


<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["SpeakerSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">  @Html.DisplayNameFor(model => model.Name) </a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["DateSortParm"]"> @Html.DisplayNameFor(model => model.Meeting) </a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["TopicSortParm"]"> @Html.DisplayNameFor(model => model.AssignmentTopic) </a>
</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Meeting.MeetingDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AssignmentTopic.Topic)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

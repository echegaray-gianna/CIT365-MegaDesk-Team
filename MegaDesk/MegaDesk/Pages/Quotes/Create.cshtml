@page
@model MegaDesk.Pages.Quotes.CreateModel

@{
    ViewData["Title"] = "Add Quote";
}

<h1>Create</h1>

<h4>DeskQuote</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="DeskQuote.Date" class="form-control" value="@DateTime.Now" />
                <span asp-validation-for="DeskQuote.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeskQuote.CustomerName" class="control-label"></label>
                <input asp-for="DeskQuote.CustomerName" class="form-control" placeholder="John Smith"/>
                <span asp-validation-for="DeskQuote.CustomerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeskQuote.Width" class="control-label"></label>
                <input asp-for="DeskQuote.Width" class="form-control" placeholder="min 24in - max 96in" />
                <span asp-validation-for="DeskQuote.Width" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeskQuote.Deep" class="control-label"></label>
                <input asp-for="DeskQuote.Deep" class="form-control" placeholder=" min 12in- max 46in" />
                <span asp-validation-for="DeskQuote.Deep" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeskQuote.Drawers" class="control-label"></label>

                <input type="number" min="0" max="7" asp-for="DeskQuote.Drawers" class="form-control"  placeholder="0 - 7" />
                <span asp-validation-for="DeskQuote.Drawers" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeskQuote.Material" class="control-label"></label>
                <br />
                <div class="form-group-radio">
                    <input type="radio" asp-for="DeskQuote.Material" value="Oak" />
                    <label asp-for="DeskQuote.Material">Oak</label>
                    <img class="img_surface" src="~/img/oak.jpg" />

                    <input type="radio" asp-for="DeskQuote.Material" value="Laminate" />
                    <label asp-for="DeskQuote.Material">Laminate</label>
                    <img class="img_surface" src="~/img/laminate.jpg" />

                    <input type="radio" asp-for="DeskQuote.Material" value="Pine" />
                    <label asp-for="DeskQuote.Material">Pine</label>
                    <img class="img_surface" src="~/img/pine.jpg" />

                    <input type="radio" asp-for="DeskQuote.Material" value="Rosewood" />
                    <label asp-for="DeskQuote.Material">Rosewood</label>
                    <img class="img_surface" src="~/img/rosewood.jpg" />

                    <input type="radio" asp-for="DeskQuote.Material" value="Veneer" />
                    <label asp-for="DeskQuote.Material">Veneer</label>
                    <img class="img_surface" src="~/img/veneer.jpg" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="DeskQuote.Shipping" class="control-label"></label>
                <div class="col-sm-10">
                    <select asp-for="DeskQuote.Shipping">
                        <option selected="selected" value="">Select a Shipping Method </option>
                        <option value="3">3 Days</option>
                        <option value="5">5 Days</option>
                        <option value="7">7 Days</option>
                        <option value="14">14 Days</option>
                    </select>
                </div>
            </div>
            <div class="form-group-submit">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="back-link">
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
